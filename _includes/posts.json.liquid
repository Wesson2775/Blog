[
    {% for post in site.posts %}
    {
        "title": {{ post.title | strip | strip_newlines | replace: '"', '\"' | replace: '\n', '' | jsonify }},
        "content": {{ post.content | strip_html | strip | strip_newlines | replace: '"', '\"' | replace: '\n', '' | replace: '\t', '' | jsonify }},
        "tags": {{ post.tags | jsonify }},
        "url": {{ post.url | relative_url | jsonify }},
        "date": {{ post.date | date: '%Y/%m/%d' | jsonify }}
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
]